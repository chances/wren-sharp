{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/WrenSharp/WrenSharp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/WrenSharp.Tests/WrenSharp.Tests.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=\"lcov,opencover\"",
                "/p:CoverletOutput=coverage/",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "cover",
            "dependsOn": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "reportgenerator",
                "-reports:coverage/coverage.opencover.xml",
                "-targetdir:coverage"
            ],
            "options": {
                "cwd": "${workspaceFolder}/WrenSharp.Tests"
            },
            "problemMatcher": "$msCompile",
            "group": "test"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/WrenSharp/WrenSharp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/WrenSharp.Tests/WrenSharp.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}